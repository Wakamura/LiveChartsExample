            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis MinValue="-15" MaxValue="15" Title="Left" Foreground="White">
                    <lvc:Axis.Separator>
                        <lvc:Separator StrokeThickness="1.5" x:Name="leftYAxis" Visibility="Collapsed">
                            <lvc:Separator.Stroke>
                                <SolidColorBrush Color="#404F56" />
                            </lvc:Separator.Stroke>
                        </lvc:Separator>
                    </lvc:Axis.Separator>
                </lvc:Axis>

                <lvc:Axis MinValue="-15" MaxValue="15" Title="Right" Foreground="White" Position="RightTop">
                    <lvc:Axis.Separator>
                        <lvc:Separator StrokeThickness="1.5" x:Name="rightYAxis" Visibility="Collapsed" Step="2">
                            <lvc:Separator.Stroke>
                                <SolidColorBrush Color="#404F56" />
