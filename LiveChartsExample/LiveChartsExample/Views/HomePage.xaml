            <lvc:CartesianChart.Series>
                <lvc:LineSeries Values="{x:Bind ConcreteDataContext.Series1.Values}"
                                Title="Series 1"
                                Stroke="Black" 
                                Fill="Transparent"
                                LineSmoothness="0" 
                                PointGeometry="{x:Null}"/>
                <lvc:LineSeries Values="{x:Bind ConcreteDataContext.Series2.Values}" 
                                Title="Series 2"
                                Stroke="Blue" 
                                Fill="Transparent" 
                                LineSmoothness="1"
                                PointGeometry="{x:Bind lvc:DefaultGeometries.Triangle}"
                                PointGeometrySize="15" 
                                PointForeround="Blue" />
                <lvc:LineSeries Values="{x:Bind ConcreteDataContext.Series3.Values}" 
                                Title="Series 3"
                                PointGeometrySize="15"
                                PointForeround="Blue"
                                Stroke="Blue"
                                StrokeThickness="4" 
                                StrokeDashArray="2"  />
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis LabelFormatter="{Binding YFormatter}">
                    <lvc:Axis.Separator>
                        <lvc:Separator StrokeThickness="2" x:Name="separatorAxisX" Visibility="Collapsed" Step="1">
                            <lvc:Separator.Stroke>
                                <SolidColorBrush Color="#404F56" />
                            </lvc:Separator.Stroke>
                        </lvc:Separator>
                    </lvc:Axis.Separator>
